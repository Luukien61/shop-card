<AnchorPane prefHeight="550.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luukien.javacard.controller.UserInfoController">
    <children>
        <!-- Header -->
        <Label layoutX="26.0" layoutY="66.0" prefHeight="32.0" prefWidth="597.0" style="-fx-background-color: #0866FF; -fx-background-radius: 8;" text="Thông tin người dùng" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <padding>
                <Insets left="16.0" />
            </padding>
        </Label>

        <!-- Form thông tin -->
        <GridPane layoutX="26.0" layoutY="111.0" prefHeight="330.0" prefWidth="413.0" style="-fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="183.6666717529297" minWidth="10.0" prefWidth="110.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="279.00001525878906" minWidth="10.0" prefWidth="279.00001525878906" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="ID thẻ">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Họ và tên" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Số điện thoại" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Ngày sinh" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Địa chỉ" GridPane.rowIndex="4">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label text="Giới tính" GridPane.rowIndex="5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="cardIdTextField" disable="true" prefHeight="30.0" prefWidth="279.0" GridPane.columnIndex="1" />
                <TextField fx:id="nameTextField" disable="true" prefHeight="30.0" prefWidth="279.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="phoneTextField" disable="true" prefHeight="30.0" prefWidth="279.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="addressTextField" disable="true" prefHeight="30.0" prefWidth="279.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <DatePicker fx:id="datePicker" disable="true" prefHeight="30.0" prefWidth="279.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="279.0" spacing="16.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <children>
                        <RadioButton fx:id="menGenderBtn" disable="true" mnemonicParsing="false" text="Nam">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <toggleGroup>
                                <ToggleGroup fx:id="gender" />
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="womenGenderBtn" disable="true" mnemonicParsing="false" text="Nữ" toggleGroup="$gender">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </RadioButton>
                    </children>
                </HBox>
                <Label text="Số dư" GridPane.rowIndex="6">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="balanceLabel" text="10000 (Bzone)" GridPane.columnIndex="1" GridPane.rowIndex="6">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <Label text="PIN" GridPane.rowIndex="7">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_LEFT" spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
                    <children>
                        <Label text="******">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button fx:id="changePinBtn" mnemonicParsing="false" style="-fx-background-color: #0866FF;" text="Thay đổi" textFill="WHITE">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                        <Button fx:id="forgotPinBtn" mnemonicParsing="false" style="-fx-background-color: #FF6B35;" text="Quên mã" textFill="WHITE">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="8.0" left="16.0" right="16.0" top="16.0" />
            </padding>
        </GridPane>

        <!-- Ảnh đại diện -->
        <ImageView fx:id="imgView" fitHeight="187.0" fitWidth="140.0" layoutX="468.0" layoutY="127.0" pickOnBounds="true" preserveRatio="true" />
        <Button fx:id="pickImgBtn" disable="true" layoutX="489.0" layoutY="325.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="100.0" text="Chọn ảnh" visible="false">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Các nút chức năng chính -->
        <HBox alignment="CENTER" layoutX="165.0" layoutY="460.0" spacing="16.0">
            <children>
                <Button fx:id="topUpBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #28A745;" text="Nạp tiền" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="updateBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #0866FF;" text="Cập nhật" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </HBox>

        <!-- Nút unlock (chỉ hiện khi có điều kiện) -->
        <Button fx:id="unlockBtn" layoutX="550.0" layoutY="460.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="73.0" style="-fx-background-color: #DC3545;" text="Unlock" textFill="WHITE" visible="false">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>

        <!-- Thông báo tài khoản bị khóa -->
        <Label layoutX="200.0" layoutY="510.0" text="Tài khoản đã bị khoá." textFill="#DC3545" visible="false">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <!-- Nút quay lại -->
        <Button fx:id="backButton" layoutX="26.0" layoutY="25.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: #6C757D;" text="Quay lại" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
