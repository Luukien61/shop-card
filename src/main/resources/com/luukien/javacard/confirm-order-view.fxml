<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.luukien.javacard.controller.ConfirmOrderController">
   <children>
      <!-- Header -->
      <Label layoutX="26.0" layoutY="24.0" prefHeight="32.0" prefWidth="847.0"
             style="-fx-background-color: #0866FF; -fx-background-radius: 8;"
             text="Thanh toán" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <padding>
            <Insets left="16.0" />
         </padding>
      </Label>

      <!-- Left Panel - Order Information -->
      <VBox layoutX="26.0" layoutY="75.0" prefHeight="460.0" prefWidth="420.0" spacing="15.0">
         <children>
            <!-- Title -->
            <Label text="Thông tin đơn hàng" textFill="#333333">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>

            <!-- Order Table -->
            <TableView fx:id="orderTableView" prefHeight="300.0" prefWidth="420.0">
               <columns>
                  <TableColumn fx:id="colProductName" prefWidth="200.0" text="Sản phẩm" />
                  <TableColumn fx:id="colQuantity" prefWidth="80.0" text="SL" />
                  <TableColumn fx:id="colPrice" prefWidth="139.0" text="Thành tiền" />
               </columns>
            </TableView>

            <!-- Total Section -->
            <VBox spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 15;">
               <children>
                  <!-- Subtotal -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Tạm tính:" prefWidth="250.0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="subtotalLabel" text="0 ₫" textFill="#333333">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>

                  <!-- Discount -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Giảm giá:" prefWidth="250.0">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="discountLabel" text="0 ₫" textFill="#ff6b6b">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>

                  <!-- Separator -->
                  <Separator prefWidth="390.0" />

                  <!-- Total -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Tổng cộng:" prefWidth="250.0">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="totalLabel" text="0 ₫" textFill="#0866FF">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- Right Panel - Payment Information -->
      <VBox layoutX="460.0" layoutY="75.0" prefHeight="460.0" prefWidth="413.0" spacing="15.0">
         <children>
            <!-- Title -->
            <Label text="Thông tin thanh toán" textFill="#333333">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>

            <!-- No Card Box -->
            <VBox fx:id="noCardBox" alignment="CENTER" prefHeight="400.0" prefWidth="413.0"
                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-border-width: 2; -fx-border-style: dashed;">
               <children>
                  <Label fx:id="errLabel" text="Vui lòng cắm thẻ..." textFill="#999999">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </VBox>

            <!-- Card Inserted Box (Waiting for PIN) -->
            <VBox fx:id="cardInsertedBox"
                  alignment="CENTER"
                  spacing="12"
                  prefHeight="400.0"
                  prefWidth="413.0"
                  style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-border-width: 2; -fx-border-style: dashed;">
               <children>
                  <!-- Icon check -->
                  <Label text="✓" style="-fx-text-fill: #28a745; -fx-font-size: 36;" />

                  <!-- Text -->
                  <Label text="Thẻ đã được xác minh"
                         style="-fx-font-size: 15; -fx-font-weight: bold; -fx-text-fill: #495057;" />

                  <!-- Button -->
                  <Button fx:id="pinRequestBtn"
                          mnemonicParsing="false"
                          prefHeight="35.0"
                          prefWidth="120.0"
                          style="-fx-background-color: #0866FF; -fx-background-radius: 8;"
                          text="Nhập PIN"
                          textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

            <!-- User Info Box (After PIN verification) -->
            <VBox fx:id="userInfoBox"
                  prefHeight="400.0"
                  prefWidth="413.0"
                  spacing="15"
                  style="-fx-background-color: #ffffff; -fx-background-radius: 8; -fx-border-color: #0866FF; -fx-border-radius: 8; -fx-border-width: 2; -fx-padding: 20;">
               <children>
                  <!-- User Avatar and Name Section -->
                  <VBox alignment="TOP_CENTER" spacing="10">
                     <children>
                        <!-- Avatar -->
                        <StackPane style="-fx-background-color: #e9ecef; -fx-background-radius: 50; -fx-pref-width: 80; -fx-pref-height: 80;">
                           <children>
                              <ImageView fx:id="userAvatarImageView"
                                         fitHeight="80.0"
                                         fitWidth="80.0"
                                         preserveRatio="true"
                                         style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
                                 <image>
                                    <Image url="@../images/default-avatar.png" />
                                 </image>
                              </ImageView>
                           </children>
                        </StackPane>

                        <!-- User Name -->
                        <Label fx:id="userNameLabel"
                               text="Tên người dùng"
                               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #212529;"
                               wrapText="true"
                               alignment="CENTER" />
                     </children>
                  </VBox>

                  <Separator prefWidth="373.0" />

                  <!-- User Details -->
                  <VBox spacing="12">
                     <children>
                        <!-- Card ID -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Mã thẻ:"
                                     prefWidth="100"
                                     style="-fx-text-fill: #6c757d; -fx-font-size: 13;">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="cardIdLabel"
                                     text="N/A"
                                     style="-fx-text-fill: #212529; -fx-font-size: 13;"
                                     wrapText="true" />
                           </children>
                        </HBox>

                        <!-- Phone -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Số điện thoại:"
                                     prefWidth="100"
                                     style="-fx-text-fill: #6c757d; -fx-font-size: 13;">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="phoneLabel"
                                     text="N/A"
                                     style="-fx-text-fill: #212529; -fx-font-size: 13;"
                                     wrapText="true" />
                           </children>
                        </HBox>

                        <!-- Address -->
                        <HBox spacing="10" alignment="TOP_LEFT">
                           <children>
                              <Label text="Địa chỉ:"
                                     prefWidth="100"
                                     style="-fx-text-fill: #6c757d; -fx-font-size: 13;">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                              </Label>
                              <Label fx:id="addressLabel"
                                     text="N/A"
                                     style="-fx-text-fill: #212529; -fx-font-size: 13;"
                                     wrapText="true"
                                     maxWidth="250" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Verified Badge -->
                  <HBox alignment="CENTER" spacing="8"
                        style="-fx-background-color: #d4edda; -fx-background-radius: 20; -fx-padding: 8 16;">
                     <children>
                        <Label text="✓"
                               style="-fx-text-fill: #155724; -fx-font-size: 14; -fx-font-weight: bold;" />
                        <Label text="Đã xác thực"
                               style="-fx-text-fill: #155724; -fx-font-size: 13; -fx-font-weight: bold;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

         </children>
      </VBox>

      <!-- Bottom Buttons -->
      <HBox alignment="CENTER_RIGHT" layoutX="26.0" layoutY="545.0" prefHeight="40.0" prefWidth="847.0" spacing="15.0">
         <children>
            <Button fx:id="backBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #6c757d; -fx-background-radius: 8;"
                    text="Quay lại" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="confirmBtn" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0"
                    style="-fx-background-color: #0866FF; -fx-background-radius: 8;"
                    text="Xác nhận" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>